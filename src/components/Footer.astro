---
interface Props {
  positionAbsolute?: boolean;
}

const { positionAbsolute } = Astro.props;
---

<style>
  footer {
    width: 100%;
    text-align: center;
    color: var(--medium-gray);
    font-size: 1.2rem;
    font-family: "iA Writer Mono", monospace;

    margin: 4rem 0;
    padding: 0 1rem;
  }

  @media screen and (min-width: 800px) {
    footer {
      font-size: 1.6rem;
    }
  }
</style>
<footer style={positionAbsolute ? "position: absolute; bottom: 0;" : ""}>
  Mateus Nascimento | 2023 | All rights reserved
</footer>
