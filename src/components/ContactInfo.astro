<style>
  .contact-info {
    width: 90%;
    max-width: 600px;
    overflow-x: auto;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);

    background: var(--black);
    padding: 2.4rem;
    box-shadow: -5px -4px 54px 8px rgba(0, 0, 0, 0.25),
      5px 4px 4px 0px rgba(0, 0, 0, 0.25);
  }

  .contact-info h2 {
    font-size: 2rem;
  }
  .contact-info__socials {
    list-style-type: none;
    display: flex;
    align-items: center;
  }

  .contact-info__socials > * + * {
    margin-left: 1.2rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;

    min-width: 55px;
    min-height: 55px;
    background-color: #151515;
    border-radius: 50%;
    border: 2px solid rgba(var(--medium-gray-rgb), 0.5);
    transition: border 0.2s;
  }

  .social-link:hover {
    border: 2px solid var(--purple);
  }
</style>
