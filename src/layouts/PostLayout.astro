<style is:global>
  main.body > p {
    line-height: 140%;
    font-size: var(--pg1);

    margin-bottom: 1.5rem;
  }

  blockquote {
    font-size: var(--pg1);

    border-left: 3px solid var(--purple);

    padding-top: 1rem;
    padding-bottom: 1rem;
    padding-left: 1.6rem;

    font-style: italic;

    margin: 2rem 0;
  }

  code {
    font-family: "iA Writer Mono", monospace;
    font-weight: bold;

    padding: 0rem 0.5rem;
    background-color: var(--white);
  }

  html.dark code {
    background-color: var(--total-black);
  }

  code::before,
  code::after {
    content: "`";
  }

  .body a {
    text-decoration: underline;
    color: var(--purple) !important;
  }

  hr {
    border: none;
    width: 100%;
    height: 1px;
    background-color: var(--gray);

    margin: 4rem 0;
  }

  html.dark hr {
    background-color: var(--dark-gray);
  }

  mark {
    background-color: #f5e9ff;

    padding: 0 0.2rem;

    border-radius: 2px;
  }

  html.dark mark {
    background-color: rgba(151, 31, 253, 0.4);
    color: white;
  }

  main.body > ul {
    margin-bottom: 1.5rem;
  }
  ul,
  ol {
    width: 93%;
    margin: 0 auto;
  }

  li {
    font-size: var(--pg1);
    position: relative;
    margin-bottom: 0.8rem;
  }

  ul li::marker {
    content: "- ";
  }

  ul ul {
    margin-top: 0.8rem;
  }

  h2 {
    font-size: var(--h2);

    margin-top: 3.5rem;
    margin-bottom: 1rem;
  }

  h3 {
    font-size: var(--h3);
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  h4 {
    font-size: var(--h4);
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }

  details {
    font-size: var(--pg2);
    padding: 2.4rem 1.6rem;

    border: 1px solid var(--gray);

    margin-bottom: 2rem;

    color: var(--dark-gray);

    line-height: 140%;

    cursor: pointer;
  }

  details[open] summary {
    margin-bottom: 1rem;
  }

  summary {
    color: var(--black);
    font-size: var(--pg1);
  }

  html.dark summary {
    color: var(--pure-white);
  }

  html.dark details {
    color: var(--gray);
  }

  .table-container {
    overflow-x: auto;
    max-width: 100%;

    margin: 3rem 0;
  }
  .table-container table {
    max-width: 100%;
  }

  table {
    border-collapse: collapse;
    margin: 0 auto;
  }

  th,
  td {
    font-size: var(--pg2);
    font-weight: normal;
    padding: 1.2rem;
    border: 1px solid var(--gray);
  }

  th {
    background-color: var(--white);
    font-weight: bold;
  }

  td {
    background-color: var(--pure-white);
    opacity: 0.8;
  }

  html.dark td {
    border-color: var(--dark-gray);
    background-color: var(--black);
  }

  html.dark th {
    background: var(--total-black);
    border-color: var(--dark-gray);
  }

  .math.math-inline .katex {
    font-size: 120%;
  }

  .math.math-display {
    max-width: 100%;
    overflow-x: auto;
    padding: 0 1rem;
    margin: 3rem 0;
  }

  .math.math-display .katex {
    font-size: 2.2rem;
  }

  figure,
  .body > img,
  p > img {
    max-width: 90%;
    margin: 3.5rem auto;
  }

  p:has(> img) {
    margin: 3.5rem 0;
    text-align: center;
  }

  figure {
    text-align: center;
  }

  figure > img {
    max-width: 100%;
  }

  figcaption {
    font-size: 1.15rem;
    color: var(--dark-gray);

    margin-top: 0.8rem;
  }

  html.dark figcaption {
    color: var(--medium-gray);
  }

  /* Resetting styles from inline code */
  .astro-code code {
    padding: 0;
    background-color: transparent;
  }

  .astro-code code::before,
  .astro-code code::after {
    content: none;
  }

  /* Actual styles */
  .astro-code {
    margin: 3rem 0;

    font-family: "iA Writer Mono", monospace;
    font-size: var(--pg3);

    line-height: 180%;

    padding: 0.8rem 1.6rem;
  }

  .astro-code code {
    font-weight: normal;
  }

  @media screen and (min-width: 800px) {
    h2 {
      margin-top: 4rem;
    }

    h3 {
      font-size: 2.4rem;

      margin-top: 2.5rem;
    }

    .math.math-display .katex {
      font-size: 2.4rem;
    }
    main.body > p,
    main.body > ul {
      margin-bottom: 2rem;
    }
  }
</style>
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/katex@0.16.0/dist/katex.min.css"
  integrity="sha384-Xi8rHCmBmhbuyyhbI88391ZKP2dmfnOl4rT9ZfRI7mLTdk1wblIUnrIq35nqwEvC"
  crossorigin="anonymous"
/>

<slot />
