---
import BaseLayout from "../layouts/BaseLayout.astro";
import Footer from "../components/Footer.astro";
---

<style>
  main {
    max-width: 1300px;

    width: 90%;
    margin: 0 auto;
    color: var(--black);
  }

  html.dark main {
    color: var(--pure-white);
  }

  h1 {
    font-size: var(--h1);
    margin-top: 4rem;
    margin-bottom: 2rem;
  }

  p {
    font-size: var(--pg1);
    max-width: 500px;
  }

  h4 {
    margin-top: 3.2rem;
    margin-bottom: 1.6rem;
    font-size: var(--pg1);
  }

  .social-networks {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
  }

  .social-networks > * + * {
    margin-left: 1.6rem;
  }

  .social-networks svg path {
    transition: 0.2s;
  }

  .social-networks svg:hover path {
    fill: var(--purple);
  }
  html.dark .social-networks svg path {
    fill: var(--pure-white);
  }
  html.dark .social-networks svg:hover path {
    fill: var(--purple);
  }

  @media screen and (min-width: 800px) {
    h1 {
      font-size: var(--h1);
    }
    p {
      font-size: var(--pg1);
    }

    h4 {
      font-size: 2rem;
    }
  }
</style>
